                    </hc:SideMenuItem.Icon>
                </hc:SideMenuItem>

            -->
            <!--<hc:SideMenu.ItemTemplate>
                    <DataTemplate>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="40" />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>
                            <Image
                                Grid.Column="0"
                                Width="24"
                                Height="24"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Source="/Images/HR.png" />
                            <hc:SimpleText
                                Grid.Column="1"
