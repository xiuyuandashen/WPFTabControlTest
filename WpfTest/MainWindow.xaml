                    <hc:SideMenuItem.Icon>
                        <Image
                            Width="24"
                            Height="24"
                            Source="/Images/HR.png" />
                    </hc:SideMenuItem.Icon>
                </hc:SideMenuItem>
                <hc:SideMenuItem MouseDown="SideMenuItem_MouseDown">
                    <hc:SideMenuItem.Header>
